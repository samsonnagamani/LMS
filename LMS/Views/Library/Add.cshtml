@model BookModel

@{
    ViewBag.Title = "Add Book";
}
<div class="text-center">

    <h2 class="m-5">Add Book</h2>

    <div class="d-inline-flex align-items-center">
        <form asp-controller="Library" asp-action="Add" method="post">
            <div class="form-row">
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" asp-for="Title" placeholder="Title">
                </div>
                <div class="form-group col-md-6">
                    <input type="text" class="form-control" asp-for="Author" placeholder="Author">
                </div>
            </div>
            <div class="input-group form-group">
                <div class="input-group-prepend">
                    <span class="input-group-text">&pound;</span>
                </div>
                <input type="text" class="form-control" placeholder="Replacement Price" asp-for="ReplacementPrice">
            </div>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <select asp-for="Status" class="form-control">
                        <option selected>Status</option>
                        <option value="Available">Available</option>
                        <option value="Taken">Taken</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <select asp-for="Genre" asp-items="@(GenreViewModel.Genres)" class="form-control">
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <input type="text" class="form-control" id="bookRating" placeholder="Rating (0-5)">
                </div>
            </div>

            <button type="submit" class="btn btn-outline-success btn-block">Add To Library</button>
        </form>
    </div>
</div>